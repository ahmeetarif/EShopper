@using EShopper.UI.Models.Authentication
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shop login section">
    <div class="container">
        <div class="col-lg-6 offset-lg-3 col-12">

            <div class="login-form">
                <h2>Login</h2>
                <form class="form" method="post" asp-action="Login" asp-controller="Authentication" data-ajax="true" data-ajax-method="POST">
                    <div class="text-danger small" asp-validation-summary="All"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Email<span>*</span></label>
                                <input type="email" name="email" placeholder="example@domain.com" asp-for="Email">
                                <span class="text-danger small" asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label>Password<span>*</span></label>
                                <input type="password" name="password" placeholder="Your password" asp-for="Password">
                                <span class="text-danger small" asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group login-btn">
                                        <button class="btn" type="submit">Login</button>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div>
                                        <a class="forgot-password-link" href="@Url.Action("forgotPassword", "auth")">Forgot Password?</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="hidden-div-20"></div>
                <div>
                    <div class="or-div">
                        <span>OR</span>
                    </div>
                </div>
                <div class="hidden-div-20"></div>

                <div class="external-div">
                    <a href="#" class="fb connect">Sign in with Facebook</a>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <partial name="~/Views/Shared/Partials/_ValidationScriptsPartial.cshtml" />
}